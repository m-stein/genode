install_config $config

#
# Boot modules
#

# generic modules
set boot_modules {
	core
	init
	timer
	nic_drv
	nat
	nic_bridge
	ld.lib.so
	libc.lib.so
	libc_resolv.lib.so
	lwip.lib.so
	lxip.lib.so
	test-http_clnt
	test-lwip_httpsrv_static
	test-lxip_udp_echo
	test-lxip_udp_client
}


# platform-specific modules
lappend_if [have_spec       linux] boot_modules fb_sdl

append_platform_drv_boot_modules

build_boot_image $boot_modules

# qemu config
append qemu_args " -m 128 -nographic "

append_if [have_spec x86]     qemu_args " -net nic,model=e1000 "
append_if [have_spec lan9118] qemu_args " -net nic,model=lan9118 "

append qemu_args " -net user -redir udp:5555::1337 "

run_genode_until ".*child \".*_clnt_.\" exited with exit value 0.*\n.*child \".*_clnt_.\" exited with exit value 0.*\n.*child \".*_clnt_.\" exited with exit value 0.*\n.*child \".*_clnt_.\" exited with exit value 0.*\n.*child \".*_clnt_.\" exited with exit value 0.*\n.*child \".*_clnt_.\" exited with exit value 0.*\n" 100
